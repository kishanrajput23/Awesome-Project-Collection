<%- include('../partials/header') -%>
<header class="jumbotron">
    <div class="container text-center">
        <h1 class="display-3">Update Comment</h1>
        <a class="btn btn-light btn-lg mt-4" href="/campgrounds/<%= campground_id %>">Go back</a>
    </div>
</header>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="rating" class="form-label">Rating</label>
                    <select class="form-control" name="comment[rating]" id="rating">
                        <option><%= comment.rating %></option>
                        <option value="1">1</option>
                        <option value="2">2</option>
                        <option value="3">3</option>
                        <option value="4">4</option>
                        <option value="5">5</option>
                    </select>
                </div>
                <div class="form-group">
                    <label for="comment[comment]" class="form-label">Update Comment</label>
                    <textarea class="form-control" type="text" name="comment[comment]" id="comment" rows="5"
                        required><%= comment.comment %></textarea>
                </div>
                <div class="form-group text-center">
                    <input class="btn btn-primary form-control" type="submit" value="Update Comment">
                </div>
            </form>
        </div>
    </div>
</div>

<%- include('../partials/footer') -%>